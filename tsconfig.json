{
  "compilerOptions": {
    // Basic Options
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Directories
    "outDir": "dist",
    "rootDir": "src",

    // Strict Type-Checking Options
    "strict": true,
    "noImplicitAny": false,

    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Module Resolution Options
    "moduleResolution": "node",

    // Advanced Options
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
